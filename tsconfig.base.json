{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@elcid-monorepo/api": ["packages/api/src/index.ts"],
            "@elcid-monorepo/api/server": ["packages/api/src/server.ts"],
            "@elcid-monorepo/apis": ["packages/apis/src/index.ts"],
            "@elcid-monorepo/apis/server": ["packages/apis/src/server.ts"],
            "@elcid-monorepo/constants": ["packages/constants/src/index.ts"],
            "@elcid-monorepo/constants/server": [
                "packages/constants/src/server.ts"
            ],
            "@elcid-monorepo/images": ["packages/images/src/index.ts"],
            "@elcid-monorepo/types": ["packages/types/src/index.ts"],
            "@elcid-monorepo/ui": ["packages/ui/src/index.ts"],
            "@elcid-monorepo/utils": ["packages/utils/src/index.ts"],
            "@elcid-monorepo/widgets": ["packages/widgets/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
